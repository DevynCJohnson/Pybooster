# -*- coding: utf-8-unix; Mode: Awk; indent-tabs-mode: nil; tab-width: 4 -*-
# vim: set fileencoding=utf-8 filetype=awk syn=awk.doxygen fileformat=unix tabstop=4 expandtab :
# kate: encoding utf-8; bom off; syntax awk; indent-mode normal; eol unix; replace-tabs on; indent-width 4; tab-width 4; remove-trailing-space on; line-numbers on;
# @brief Print a spectrum of colors and various symbols/characters to test terminal color and character support
# @file termtest
# @version 2018.09.11
# @author Devyn Collier Johnson <DevynCJohnson@Gmail.com>


BEGIN {
    printf "Color Test: "
    for (column = 0; column < 256; column++) {
        g = ((column * 510) / 255);
        if (g > 255) { g = 510 - g; }
        printf "\033[48;2;%d;%d;%dm%s\033[0m", 255 - column, g, column, " ";
    }
    printf "\n\nASCII &Â Extended ASCII: ";
    for (n=32; n < 256; ++n) {
        if (n > 126 && n < 161) { continue }
        printf("%c  ", n);
    }
    printf "\n\nCyrillic: Ð™ Ð¦ Ð£ Ðš Ð• Ð Ð“ Ð¨ Ð© Ð— Ð¥ Ðª Ð¤ Ð« Ð’ Ð ÐŸ Ð  Ðž Ð› Ð” Ð– Ð­ Ð¯ Ð§ Ð¡ Ðœ Ð˜ Ð¢ Ð¬ Ð‘ Ð®\n"
    printf "\nVarious Unicode Symbols: â‚¹\tÂ£\tÂ¤\tâ‚¿\tâ‚¬\tâœ“\tâœ—\tâ™¯\tâ‰¥\tâ‰¤\tÃ·\tÃ—\tâ‰¢\tâ€¦\tâŽ´\tâ™€\tâ™‚\tâŒ¨\tâŒ›\tâ˜¹\tâ˜º\tâ˜ \tâ˜¢\tâ˜£\tâš›\tðŸŽ§\tðŸ˜€\tðŸ˜‰\tâ‰\t\n"
}
